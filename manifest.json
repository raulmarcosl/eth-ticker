{
  "name": "ETH ticker",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension displays the current Ethereum (ETH) price on the badge icon.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "https://api.kraken.com/"
  ],
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Ether price ticker",
    "default_popup": "src/browser_action/browser_action.html"
  }
}

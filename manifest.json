{
  "name": "ETH ticker",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension displays the current ether (ETH) price on the badge icon.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "permissions": [
    "https://api.kraken.com/"
  ],
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Ether price tracker",
    "default_popup": "src/browser_action/browser_action.html"
  }
}
